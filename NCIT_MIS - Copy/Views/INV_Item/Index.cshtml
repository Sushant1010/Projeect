@model IEnumerable<NCIT_MIS.ViewModel.INV_ItemVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Inventory Item List</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Create", "INV_Item")">Create</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <!-- <button type="button" class="card-action card-remove" title="Remove"></button> -->
                    </div>
                </div>
                @{ 
                    int i = 1;
                }
                <div class="card-body">
                    <table id="demo-datatables-2" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>@Html.DisplayNameFor(model => model.ItemName)</th>
                                <th>@Html.DisplayNameFor(model => model.ItemCode)</th>
                                <th>@Html.DisplayNameFor(model => model.EnteredDate)</th>
                                <th>@Html.DisplayNameFor(model => model.DepartmentId)</th>
                                <th>@Html.DisplayNameFor(model => model.IsWarranty)</th>
                                <th>@Html.DisplayNameFor(model => model.WarrantyDuration)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>S.N.</th>
                                <th>@Html.DisplayNameFor(model => model.ItemName)</th>
                                <th>@Html.DisplayNameFor(model => model.ItemCode)</th>
                                <th>@Html.DisplayNameFor(model => model.EnteredDate)</th>
                                <th>@Html.DisplayNameFor(model => model.DepartmentId)</th>
                                <th>@Html.DisplayNameFor(model => model.IsWarranty)</th>
                                <th>@Html.DisplayNameFor(model => model.WarrantyDuration)</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th>@i</th>
                                <td>@Html.DisplayFor(modelItem => item.ItemName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ItemCode)</td>
                                <th>@Html.DisplayFor(modelItem => item.EnteredDate@*.ToString("yyyy-MM-dd")*@)</th>
                                <td>@Html.DisplayFor(modelItem => item.DepartmentId)</td>
                                <td>@Html.DisplayFor(modelItem => item.IsWarranty)</td>
                                <td>@Html.DisplayFor(modelItem => item.WarrantyDuration)</td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.ItemId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                    @Html.ActionLink(" ", "Detail", new { id = item.ItemId }, new { @class = "fa fa-list text-success", title = "Details" }) |
                                    @Html.ActionLink(" ", "Delete", new { id = item.ItemId }, new { @class = "fa fa-trash-o text-danger", title = "Delete", onclick = "return confirm('Are you sure to Delete?')" })
                                </td>
                            </tr>
                                i++;
                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

