@model IEnumerable<NCIT_MIS.ViewModel.SystemUserVM>

@{
    ViewBag.Title = "User Permission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">User Permission</h1> </div>
        @*<a class="btn btn-success col-xs-2 " href="@Url.Action("Create", "A_Category")">Create</a>*@

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <!-- <button type="button" class="card-action card-remove" title="Remove"></button> -->
                    </div>
                </div>
                <div class="card-body">
                    <table id="demo-datatables-2" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.IsAdmin)</th>
                                <th>@Html.DisplayNameFor(model => model.AssetModuleAllow)</th>
                                <th>@Html.DisplayNameFor(model => model.InventoryModuleAllow)</th>
                                <th>@Html.DisplayNameFor(model => model.RequestModuleAllow)</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.IsAdmin)</th>
                                <th>@Html.DisplayNameFor(model => model.AssetModuleAllow)</th>
                                <th>@Html.DisplayNameFor(model => model.InventoryModuleAllow)</th>
                                <th>@Html.DisplayNameFor(model => model.RequestModuleAllow)</th>
                                @*<th>Action</th>*@
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <th>@Html.DisplayFor(modelItem => item.IsAdmin)</th>
                                    <td>@Html.DisplayFor(modelItem => item.AssetModuleAllow)</td>
                                    <td>@Html.DisplayFor(modelItem => item.InventoryModuleAllow)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RequestModuleAllow)</td>
                                    <td>@Html.ActionLink(" ", "Edit", new { id = item.UserId }, new { @class = "fa fa-pencil text-primary", title = "Edit" })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

