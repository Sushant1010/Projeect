
@{
    ViewBag.Title = "Category Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Category Create</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "A_Category")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    <input type="text" id="SesFullName" name="SesFullName" hidden="hidden" value='@Session["FullName"]' />
                                    <input type="text" id="SesDepartmentId" name="SesDepartmentId" hidden="hidden" value='@Session["DepartmentId"]' />
                                    <input type="text" id="SesUserType" name="SesUserType" hidden="hidden" value='@Session["UserType"]' />
                                    <input type="text" id="SesUserId" name="SesUserId" hidden="hidden" value='@Session["UserId"]' />
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Category Name</label>
                                            <div class="col-sm-4">
                                                <input id="CategoryName" name="CategoryName" class="form-control" type="text">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Category Code</label>
                                            <div class="col-sm-4">
                                                <input id="CategoryCode" name="CategoryCode" class="form-control" type="text">
                                            </div>
                                        </div>
                                        <button class="btn btn-primary" type="submit">Create</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


