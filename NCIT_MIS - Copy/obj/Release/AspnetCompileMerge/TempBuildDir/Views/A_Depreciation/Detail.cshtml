@model NCIT_MIS.ViewModel.A_DepreciationVM

@{
    ViewBag.Title = "Depreciation Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="layout-content-body container">
        <div class="title-bar" style="margin-bottom: -40px;">
            <div class="col-xs-10">  <h1 class="title-bar-title">Depreciation Detail</h1> </div>

            <ol class="breadcrumb">
                <li class="list">@Html.ActionLink("Edit", "Edit", "A_Depreciation", new { Id = Model.DepreciationId }, new { @class = "btn btn-xs-2 btn-success" })</li>
                <li class="list">@Html.ActionLink("List", "Index", null, new { @class = "btn btn-xs-2 btn-success" })</li>
            </ol>
        </div>
        <div class="row no-gutters">
            <div class="col-xs-12  ">
                <div class="card" style="margin-top: 30px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="demo-form-wrapper">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="text" id="FullName" name="FullName" hidden="hidden" value='@Session["FullName"]' />
                                        <input type="text" id="DepartmentId" name="DepartmentId" hidden="hidden" value='@Session["DepartmentId"]' />
                                        <input type="text" id="UserType" name="UserType" hidden="hidden" value='@Session["UserType"]' />
                                        <input type="text" id="UserId" name="UserId" hidden="hidden" value='@Session["UserId"]' />
                                        <div class="form form-horizontal">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Depreciation Name</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("DepartmentName", Model.DepreciationName, new { @class = "form-control", ReadOnly="ReadOnly" })
                                                    @Html.ValidationMessageFor(model => model.DepreciationName, "", new { @class = "text-danger" })
                                                    @*<input id="DepartmentName" name="DepartmentName" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Depreciation Rate</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("DepartmentName", Model.DepreciationRate, new { @class = "form-control", ReadOnly="ReadOnly"  })
                                                    @Html.ValidationMessageFor(model => model.DepreciationRate, "", new { @class = "text-danger" })
                                                    @*<input id="DepartmentCode" name="DepartmentCode" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Description</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("DepartmentName", Model.Description, new { @class = "form-control", ReadOnly="ReadOnly"  })
                                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                                    @*<input id="PhoneNo" name="PhoneNo" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>