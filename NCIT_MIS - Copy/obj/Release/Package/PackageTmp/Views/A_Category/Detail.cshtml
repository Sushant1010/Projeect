@model NCIT_MIS.ViewModel.A_CategoryVM

@{
    ViewBag.Title = "Category Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="layout-content-body container">
        <div class="title-bar" style="margin-bottom: -40px;">
            <div class="col-xs-10">  <h1 class="title-bar-title">Category Detail</h1> </div>

            <ol class="breadcrumb">
                <li class="list">@Html.ActionLink("Edit", "Edit", "A_Category", new { Id = Model.CategoryId }, new { @class = "btn btn-xs-2 btn-success" })</li>
                <li class="list">@Html.ActionLink("List", "Index", null, new { @class = "btn btn-xs-2 btn-success" })</li>
            </ol>
        </div>
        <div class="row no-gutters">
            <div class="col-xs-12  ">
                <div class="card" style="margin-top: 30px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="demo-form-wrapper">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form form-horizontal">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Category Name</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("CategoryName", Model.CategoryName, new { @class = "form-control", ReadOnly="ReadOnly" })
                                                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                                                    @*<input id="DepartmentName" name="DepartmentName" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Category Code</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("CategoryCode", Model.CategoryCode, new { @class = "form-control", ReadOnly="ReadOnly"  })
                                                    @Html.ValidationMessageFor(model => model.CategoryCode, "", new { @class = "text-danger" })
                                                    @*<input id="DepartmentCode" name="DepartmentCode" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>