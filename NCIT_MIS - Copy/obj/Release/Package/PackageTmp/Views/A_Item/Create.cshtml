                                                    <input id="AssetName" name="AssetName" class="form-control" type="text" required = "required">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Asset Item Code</label>
                                                <div class="col-sm-4">
                                                    <input id="AssetCode" name="AssetCode" class="form-control" type="text" required = "required">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control">Category</label>
                                                <div class="col-sm-4">
                                                    @Html.DropDownList("CategoryId", null, "-- Select --", new { @class = "form-control select2 DepartmentId", required = "required" })
                                                </div>
                                            </div>
                                            @*<div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control">Is Warranty?</label>
                                                <div class="col-sm-4">
                                                    <div class="checkbox">
                                                        @Html.RadioButton("IsWarranty", "Y", false, new { onclick = "showdiv('Y')" })<span>&nbsp;&nbsp;&nbsp;Yes&nbsp;&nbsp;&nbsp;</span>
                                                        @Html.RadioButton("IsWarranty", "N", true, new { onclick = "showdiv('N')" })<span>&nbsp;&nbsp;&nbsp;No</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="Warranty" hidden="hidden">
                                                <hr />
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label" for="form-control-1">Warranty Duration(In Month)</label>
                                                    <div class="col-sm-4">
                                                        <input id="WarrantyDuration" name="WarrantyDuration" class="form-control" type="text">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label" for="form-control-1">Warranty Duration(In Date)</label><br>
                                                </div>
                                                <hr />
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label" for="form-control-1">From Date (AD)</label>
                                                    <div class="col-sm-4">
                                                        <input id="FromDate" name="FromDate" class="form-control datepicker" type="text">
                                                    </div>
                                                    <label class="col-sm-2 control-label" for="form-control-1">From Date (BS)</label>
                                                    <div class="col-sm-4">
                                                        <input id="FromDateBS" name="FromDateBS" class="form-control nepaliDate" type="text">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-2 control-label" for="form-control-1">To Date (AD)</label>
                                                    <div class="col-sm-4">
                                                        <input id="ToDate" name="ToDate" class="form-control datepicker" type="text">
                                                    </div>
                                                    <label class="col-sm-2 control-label" for="form-control-1">To Date (BS)</label>
                                                    <div class="col-sm-4">
                                                        <input id="ToDateBS" name="ToDateBS" class="form-control" type="text">
                                                    </div>
                                                </div>
                                            </div>*@
                                                <button class="btn btn-primary" type="submit">Create</button>
                                            </div>
                                            }
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    function showdiv(stype) {
        if (stype == "Y") {
            $("#Warranty").show();
        }
        else if (stype == "N") {
            $("#Warranty").hide();
        }
    }
    //For From Date
    $('#FromDate').change(function () {
        $('#FromDateBS').val(AD2BS($('#FromDate').val()));
    });

    $('#FromDateBS').nepaliDatePicker({
        ndpEnglishInput: 'FromDate'
    });
    //For To Date
    $('#ToDate').change(function () {
        $('#ToDateBS').val(AD2BS($('#ToDate').val()));
    });

    $('#ToDateBS').nepaliDatePicker({
        ndpEnglishInput: 'ToDate'
    });

    $('.datepicker').datepicker({
        format: 'yyyy-mm-dd',
        todayHighlight: 'true',
        autoclose: 'true',
        //language:'np',
});
</script>

