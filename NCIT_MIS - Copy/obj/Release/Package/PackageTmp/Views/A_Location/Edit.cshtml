@model NCIT_MIS.ViewModel.A_LocationVM

@{
    ViewBag.Title = "Location Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="layout-content-body container">
        <div class="title-bar" style="margin-bottom: 20px;">
            <div class="col-xs-10">  <h1 class="title-bar-title">Location Edit</h1> </div>
            <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "A_Location")">List</a>

        </div>
        <div class="row no-gutters">
            <div class="col-xs-12  ">
                <div class="card" style="margin-top: 30px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="demo-form-wrapper">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form form-horizontal">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Location Name</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("DepartmentName", Model.LocationName, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.LocationName, "", new { @class = "text-danger" })
                                                    @*<input id="FullName" name="FullName" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Location Code</label>
                                                <div class="col-sm-4">
                                                    @Html.TextBox("DepartmentCode", Model.LocationCode, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.LocationCode, "", new { @class = "text-danger" })
                                                    @*<input id="Email" name="Email" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label" for="form-control-1">Department</label>
                                                <div class="col-sm-4">
                                                    @Html.DropDownList("DepartmentId", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                                                    @*<input id="Password" name="Password" class="form-control" type="text">*@
                                                </div>
                                            </div>
                                            <button class="btn btn-primary" type="submit">Update</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
