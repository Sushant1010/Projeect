
@{
    ViewBag.Title = "Vendor Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Vendor Create</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "A_Vendor")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                <div class="form form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="form-control-1">Vendor Name</label>
                                        <div class="col-sm-4">
                                            <input id="VendorName" name="VendorName" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="form-control-1">Pan No.</label>
                                        <div class="col-sm-4">
                                            <input id="PanNo" name="PanNo" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="form-control-1">Vendor Address</label>
                                        <div class="col-sm-4">
                                            <input id="VendorAddress" name="VendorAddress" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="form-control-1">Vendor Phone No.</label>
                                        <div class="col-sm-4">
                                            <input id="VendorPhone" name="VendorPhone" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" for="form-control-1">Vendor Mobile No.</label>
                                        <div class="col-sm-4">
                                            <input id="VendorMobile" name="VendorMobile" class="form-control" type="text">
                                        </div>
                                    </div>

                                    <button class="btn btn-primary" type="submit">Create</button>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


