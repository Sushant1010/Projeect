@model NCIT_MIS.ViewModel.INV_DistributionVM

@{
    ViewBag.Title = "Distribution Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Distribution Edit</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "INV_Distribution")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">DepartmentId</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("DepartmentId", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                @*@Html.TextBox("DepartmentId", Model.DepartmentId, new { @class = "form-control" })*@
                                                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                                                @*<input id="FullName" name="FullName" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">CategoryName</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("CategoryId", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                                @*<input id="FullName" name="FullName" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">ItemName</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("ItemId", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">SalesQuantity</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("SalesQuantity", Model.SalesQuantity, new { @class = "form-control",required="required" })
                                                @Html.ValidationMessageFor(model => model.SalesQuantity, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">UnitId</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("UnitList", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                @Html.ValidationMessageFor(model => model.UnitId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Rate</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("Rate", Model.Rate, new { @class = "form-control",required="required" })
                                                @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })

                                            </div>
                                        </div>

                                        <button class="btn btn-primary" type="submit">Update</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
