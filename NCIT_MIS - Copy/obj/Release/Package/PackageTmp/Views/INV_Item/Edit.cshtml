@model NCIT_MIS.ViewModel.INV_ItemVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Inventory Item Edit</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "INV_Item")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Inventory Item Name</label>
                                            <div class="col-sm-4">
                                                @*<input id="FullName" name="FullName" class="form-control" type="text">*@
                                                @Html.TextBoxFor(model => model.ItemName, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Inventory Item Code</label>
                                            <div class="col-sm-4">
                                                @*<input id="Email" name="Email" class="form-control" type="text">*@
                                                @Html.TextBoxFor(model => model.ItemCode, new { @class = "form-control", required = "required" })
                                                @Html.ValidationMessageFor(model => model.ItemCode, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control">Category Name</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("CategoryId", null, "-- Select --", new { @class = "form-control select2", required = "required" })
                                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        

                                        
                                        <button class="btn btn-primary" type="submit">Update</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


