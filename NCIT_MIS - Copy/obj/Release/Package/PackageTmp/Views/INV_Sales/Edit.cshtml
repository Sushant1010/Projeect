                                                        </tr>

                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="col-sm-offset-9 col-sm-12 totalcalc">
                                            <div class="form-group row">
                                                <div class="col-sm-3">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><b>Total Amount</b></span>
                                                        @Html.TextBox("TotalAmount", Model.INV_SalesBillDetail.TotalAmount, new { @class = "form-control", required = "required", @type = "number", @step = "2" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-offset-9 col-sm-12 totalcalc">
                                            <div class="form-group row">
                                                <div class="col-sm-3">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><b>Discount(%)</b></span>
                                                        @Html.TextBox("DiscountPercent", Model.INV_SalesBillDetail.DiscountPercent, new { @class = "form-control", @type = "number", @step = "any" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-sm-offset-9 col-sm-12 totalcalc">
                                            <div class="form-group row">
                                                <div class="col-sm-3">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><b>Discount Amt</b></span>

                                                        @Html.TextBox("DiscountAmount", Model.INV_SalesBillDetail.DiscountAmount, new { @class = "form-control", @type = "number", @step = "any" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-offset-9 col-sm-12 totalcalc">
                                            <div class="form-group row">
                                                <div class="col-sm-3">
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><b>Taxable Amt</b></span>
                                                        @Html.TextBox("TaxableAmount", Model.INV_SalesBillDetail.TaxableAmount, new { @class = "form-control", @type = "Number", @step = "any" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-offset-9 col-sm-7">
                                            <div class="form-group row">
                                                <div class="col-sm-3">
                                                    <label style="padding-top:10px;"><b>Vat Applicable?</b></label>
                                                </div>
                                                <div class="col-sm-2" style="padding:0;">
                                                    <div class="checkbox">
                                                        @Html.RadioButton("VatApplicable", "Yes", true, new { onclick = "showdiv('Y')" })<span>Yes</span>&nbsp;&nbsp;
                                                        @Html.RadioButton("VatApplicable", "No", false, new { onclick = "showdiv('N')" })<span>No</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-offset-9 col-sm-12 totalcalc">
                                            <div id="VatDiv" hidden>
                                                <div class="form-group row">
                                                    <div class="col-sm-3">
                                                        <div class="input-group">
                                                            <span class="input-group-addon" value="13"><b>VAT Percent</b></span>
                                                            @Html.TextBox("VatPercent", "13", new { @class = "form-control", @readonly = "readonly" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <div class="col-sm-3">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><b>VAT Amount</b></span>
                                                            <input type="number" step="any" id="VatAmount" value="@Model.INV_SalesBillDetail.VatAmount" name="VatAmount" class="form-control" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">

                                                <div class="col-sm-3">
                                                    <div class="input-group">
                                                        <span class="input-group-addon" value="0"><b>Grand Total</b></span>
                                                        @Html.TextBox("TotalWithVat", Model.INV_SalesBillDetail.TotalWithVat, new { @class = "form-control", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-sm-offset-2 col-sm-10">
                                                    <input type="submit" value="Save" class="btn btn-success" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    //For Bill Date
    $('#BillDate').change(function () {
        $('#BillDateBS').val(AD2BS($('#BillDate').val()));
    });

    $('#BillDateBS').nepaliDatePicker({
        ndpEnglishInput: 'BillDate'
    });

    $('.datepicker').datepicker({
        format: 'yyyy-mm-dd',
        todayHighlight: 'true',
        autoclose: 'true',
        //language:'np',
    });

    //vatapplicable
    function showdiv(inp) {
        if (inp == 'Y') {
            $("#VatDiv").show();
            $('#VATPercent').val(13);
            getVatAmount();
        }
        else {
            var amount = $('#TaxableAmount').val();
            $('#VATPercent').val(0);
            $("#VatDiv").hide();
            $("#VatAmount").val(0);
            $("#TotalWithVat").val(amount);
        }
    }
</script>


