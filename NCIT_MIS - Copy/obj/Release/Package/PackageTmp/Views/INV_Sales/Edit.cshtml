                                                                        <option selected>--SELECT--</option>
                                                                        @foreach (var category in ViewBag.CategoryList)
                                                                        {
                                                                            <option value="@category.Value" @(item.CategoryId == Convert.ToInt32(category.Value) ? "selected" : "")>@category.Text</option>
                                                                        }
                                                                        <select>
                                                                </td>
                                                                <td>
                                                                    <select class='form-control' style='text-transform:uppercase; width:100%' id='ItemId-@i' name='ItemId-@i'>
                                                                        <option selected>--SELECT--</option>
                                                                        @foreach (var item1 in ViewBag.ItemList)
                                                                        {
                                                                            <option value="@item1.Value" @(item.ItemId == Convert.ToInt32(item1.Value) ? "selected" : "")>@item1.Text</option>
                                                                        }
                                                                        <select>
                                                                </td>
