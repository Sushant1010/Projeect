@model NCIT_MIS.ViewModel.INV_Sales

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var data = "<option value=''>--Select-- </option>";
    foreach (var a in ViewBag.CategoryList)
    {
        data += "<option value='" + a.Value + "'>" + a.Text + "</option>";
    }
    <input type="hidden" name="hddCategory" id="hddCategory" value="@data">

    var data1 = "<option value=''>--Select-- </option>";
    foreach (var a in ViewBag.ItemList)
    {
        data1 += "<option value='" + a.Value + "'>" + a.Text + "</option>";
    }
    <input type="hidden" name="hddItem" id="hddItem" value="@data1">
}
<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Inventory Sales Edit</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "INV_Sales")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    <input type="hidden" value="@Model.INV_SalesBillDetail.SalesBillId" name="SalesBillId" id="SalesBillId" />
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">S.N.</label>
                                            <div class="col-sm-4">
                                                <input id="BillSerialNo" name="BillSerialNo" value="@Model.INV_SalesBillDetail.BillSerialNo" class="form-control" type="text" required="required" readonly>
                                            </div>

                                            <label class="col-sm-2 control-label" for="form-control">Vendor</label>
                                            <div class="col-sm-4">
                                                @Html.DropDownList("VendorId", null, "--SELECT--", new { @class = "form-control select2 VendorId" })
                                                @*<input id="VendorName" name="VendorName" value="@Model.A_PurchaseBillDetail.VendorName" class="form-control" type="text" required="required" readonly>*@
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Bill Date (AD)</label>
                                            <div class="col-sm-4">
                                                <input id="BillDate" name="BillDate" value="@Model.INV_SalesBillDetail.BillDate" class="form-control datepicker" type="text">
                                            </div>
                                            <label class="col-sm-2 control-label" for="form-control-1">Bill Date (BS)</label>
                                            <div class="col-sm-4">
                                                <input id="BillDateBS" name="BillDateBS" value="@Model.INV_SalesBillDetail.BillDateBS" class="form-control nepaliDate" type="text">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Bill No.</label>
                                            <div class="col-sm-4">
                                                <input id="BillNo" name="BillNo" value="@Model.INV_SalesBillDetail.BillNo" class="form-control" type="text" required="required">
                                            </div>

                                            <label class="col-sm-2 control-label" for="form-control-1">Remarks</label>
                                            <div class="col-sm-4">
                                                <input id="Remarks" name="Remarks" value="@Model.INV_SalesBillDetail.Remarks" class="form-control" type="text" required="required">
                                            </div>
                                        </div>

                                        <hr>
                                        <input type='hidden' id="hddrowindex" name='hddrowindex' value='@((Model.INV_SalesItemList).Count())' class='rowcount' />
