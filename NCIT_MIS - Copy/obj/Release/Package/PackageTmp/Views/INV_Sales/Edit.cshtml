                                                        {
                                                            <tr id="addItem">
                                                                <td>
                                                                    <input type="hidden" name="@i" id="@i" value="@i" class="rowcount1" />
                                                                    <input type="hidden" name="PurchaseItemId-@i" id="PurchaseItemId-@i" value="@item.SalesItemId" class="rowcount1" />
