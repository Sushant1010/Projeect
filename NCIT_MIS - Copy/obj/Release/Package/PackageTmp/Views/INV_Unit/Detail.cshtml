@model NCIT_MIS.ViewModel.INV_UnitVM

@{
    ViewBag.Title = "Unit Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: -40px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Unit Detail</h1> </div>

        <ol class="breadcrumb">
            <li class="list">@Html.ActionLink("Edit", "Edit", "INV_Unit", new { Id = Model.UnitId }, new { @class = "btn btn-xs-2 btn-success" })</li>
            <li class="list">@Html.ActionLink("List", "Index", null, new { @class = "btn btn-xs-2 btn-success" })</li>
        </ol>
    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="text" id="FullName" name="FullName" hidden="hidden" value='@Session["FullName"]' />
                                    <input type="text" id="DepartmentId" name="DepartmentId" hidden="hidden" value='@Session["DepartmentId"]' />
                                    <input type="text" id="UserType" name="UserType" hidden="hidden" value='@Session["UserType"]' />
                                    <input type="text" id="UserId" name="UserId" hidden="hidden" value='@Session["UserId"]' />
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Unit Name</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("UnitName", Model.UnitName, new { @class = "form-control", ReadOnly = "ReadOnly" })
                                                @Html.ValidationMessageFor(model => model.UnitName, "", new { @class = "text-danger" })
                                                @*<input id="DepartmentName" name="DepartmentName" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Unit Code</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("UnitCode", Model.UnitCode, new { @class = "form-control", ReadOnly = "ReadOnly" })
                                                @Html.ValidationMessageFor(model => model.UnitCode, "", new { @class = "text-danger" })
                                                @*<input id="DepartmentCode" name="DepartmentCode" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>