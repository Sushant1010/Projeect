@model NCIT_MIS.ViewModel.INV_UnitVM

@{
    ViewBag.Title = "Unit Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-10">  <h1 class="title-bar-title">Unit Edit</h1> </div>
        <a class="btn btn-success col-xs-2 " href="@Url.Action("Index", "INV_Unit")">List</a>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="demo-form-wrapper">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form form-horizontal">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Unit Name</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("UnitName", Model.UnitName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.UnitName, "", new { @class = "text-danger" })
                                                @*<input id="FullName" name="FullName" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="form-control-1">Unit Code</label>
                                            <div class="col-sm-4">
                                                @Html.TextBox("UnitCode", Model.UnitCode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.UnitCode, "", new { @class = "text-danger" })
                                                @*<input id="Email" name="Email" class="form-control" type="text">*@
                                            </div>
                                        </div>
                                        <button class="btn btn-primary" type="submit">Update</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
