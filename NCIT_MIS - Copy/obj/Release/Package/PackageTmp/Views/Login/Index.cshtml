@{
    ViewBag.Title = "Login";
    Layout = null;
}
@if (Session["FullName"] == null)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Login</title>
        <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no">
        <meta name="theme-color" content="#ffffff">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700">
        <link rel="stylesheet" href="~/assets/css/vendor.min.css">
        <link rel="stylesheet" href="~/assets/css/elephant.min.css">
        <link rel="stylesheet" href="~/assets/css/login-3.min.css">
        <link href="~/assets/css/font-awesome.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="login">
            <div class="login-body">
                <a class="login-brand" href="index.html">
                    <!-- <img class="img-responsive" src="img/logo.svg" alt="Elephant"> -->
                    <!-- <h3> System </h3> -->
                </a>
                <h3 class="login-heading">Sign in</h3>
                <p class="login-box-msg"></p>

                    @if (Session["ViewBagMessage"] != null)
                    {
                        <div class="">

                            <span style="font-size:14px; text-align:center; width:297px;" class="btn btn-sm btn-danger" readonly><i class="fa fa-warning"></i> @Session["ViewBagMessage"]</span>
                        </div>
                        Session.Clear();
                    }
                
                <div class="login-form">
                    @using (Html.BeginForm())
                    {
                        <div class="md-form-group md-label-floating">
                            <input class="md-form-control" type="email" name="email" placeholder="Email *" value="admin@ncit.com" spellcheck="false" autocomplete="off" data-msg-required="Please enter your email address." required>
                            <label class="md-control-label">Email</label>
                        </div>
                        <div class="md-form-group md-label-floating">
                            <input class="md-form-control" type="password" placeholder="Password *" value="admin123" name="password" minlength="6" data-msg-minlength="Password must be 6 characters or more." data-msg-required="Please enter your password." required>
                            <label class="md-control-label">Password</label>
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                    }
                </div>
            </div>
        </div>
        <script src="~/assets/js/vendor.min.js"></script>
        <script src="~/assets/js/elephant.min.js"></script>
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-83990101-1', 'auto');
            ga('send', 'pageview');
        </script>
    </body>
</html>
                    }
                    else
                    {
                        <script>
                            window.location.href = "@Url.Action("Index","Dashboard")";
                        </script>
                    }
