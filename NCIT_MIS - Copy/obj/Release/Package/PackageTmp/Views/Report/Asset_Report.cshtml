@model IEnumerable<NCIT_MIS.ViewModel.AssetReport>

@{
    ViewBag.Title = "Asset Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="layout-content-body container">
        <div class="title-bar" style="margin-bottom: 20px;">
            <div class="col-xs-10">  <h1 class="title-bar-title">Asset Distribution Report</h1> </div>
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            <div class="title-bar" style="margin-bottom: 20px; margin-top:50px;">
                <div class="form-group">
                    <label class="col-sm-1 control-label" for="form-control">Department</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("DepartmentId", null, "-- Select --", new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label" for="form-control">Location</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("LocationId", null, "-- Select --", new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label" for="form-control">Category</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("CategoryId", null, "-- Select --", new { @class = "form-control", onClick="GetItem()" })
                    </div>
                    <label class="col-sm-1 control-label" for="form-control">Item</label>
                    <div class="col-sm-2">
                        @Html.DropDownList("AssetItemId", null, "-- Select --", new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-success" />
                </div>
            </div>
        }
            <div class="row no-gutters">
                <div class="col-xs-12  ">
                    <button id="btnExport" class="btn btn-success col-xs-1 " onclick="fnExcelReport();"> EXCEL </button>
                    <div class="card" style="margin-top: 30px;">
                        <div class="card-header">
                            <div class="card-actions">
                                <button type="button" class="card-action card-toggler" title="Collapse"></button>
                                <button type="button" class="card-action card-reload" title="Reload"></button>
                                <!-- <button type="button" class="card-action card-remove" title="Remove"></button> -->
                            </div>
                        </div>
                        <div class="card-body">
                            @{
                                int i = 1;
                            }

                            <table id="demo-datatables-1" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Asset Item</th>
                                        <th>Department</th>
                                        <th>Location</th>
                                        <th>Quantity</th>
                                        @*<th>Amount</th>*@
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>S.N.</th>
                                        <th>Asset Item</th>
                                        <th>Department</th>
                                        <th>Location</th>
                                        <th>Quantity</th>
                                        @*<th>Amount</th>*@
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.AssetItemName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LocationName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.Amount)</td>*@
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<script>
    function GetItem()
    {
        var cat = $("#CategoryId").val();

        $.ajax({
                url: "@Url.Action("GetItemByCategory", "ForAll")",
            type: "post",
            data: { catid: cat},
            success: function (response, textStatus, jqXHR) {
                var $select = $("#AssetItemId");//district dropdown.
                $select.empty();
                $select.append(response);
            },
            error: function (jqXHR, textStatus, errorThrown) {

                //alert("Something went wrong, Select Crew Type Again.");
            },
            complete: function () {
            }
        });
    }

    function GetLoc()
    {
        var DepId = $("#DepartmentId").val();
        alert(DepId);
        $.ajax({
                url: "@Url.Action("GetLocationListByDepartmentId", "ForAll")",
            type: "post",
            data: { catid: DepId},
            success: function (response, textStatus, jqXHR) {

                var $select = $("#LocationId");//district dropdown.
                $select.empty();
                $select.append(response.msg);
            },
            error: function (jqXHR, textStatus, errorThrown) {

                //alert("Something went wrong, Select Crew Type Again.");
            },
            complete: function () {
            }
        });
    }
</script>
<script>
    function fnExcelReport() {
        var tab_text = "<table border='2px'><tr bgcolor='#87AFC6'>";
        var textRange; var j = 0;
        tab = document.getElementById('demo-datatables-1'); // id of table

        for (j = 0; j < tab.rows.length; j++) {
            tab_text = tab_text + tab.rows[j].innerHTML + "</tr>";
            //tab_text=tab_text+"</tr>";
        }

        tab_text = tab_text + "</table>";
        tab_text = tab_text.replace(/<A[^>]*>|<\/A>/g, "");//remove if u want links in your table
        tab_text = tab_text.replace(/<img[^>]*>/gi, ""); // remove if u want images in your table
        tab_text = tab_text.replace(/<input[^>]*>|<\/input>/gi, ""); // reomves input params

        var ua = window.navigator.userAgent;
        var msie = ua.indexOf("MSIE ");

        if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))      // If Internet Explorer
        {
            txtArea1.document.open("txt/html", "replace");
            txtArea1.document.write(tab_text);
            txtArea1.document.close();
            txtArea1.focus();
            sa = txtArea1.document.execCommand("SaveAs", true, "Say Thanks to Sumit.xls");
        }
        else                 //other browser not tested on IE 11
            sa = window.open('data:application/vnd.ms-excel,' + encodeURIComponent(tab_text));

        return (sa);
    }
</script>