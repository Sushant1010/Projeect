@model NCIT_MIS.ViewModel.RequestDetail

@{
    ViewBag.Title = "Request Assets Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="layout-content-body container">
    <div class="title-bar" style="margin-bottom: 20px;">
        <div class="col-xs-9">  <h1 class="title-bar-title">Request List</h1> </div>
        <div class=" col-xs-3">

        </div>

    </div>
    <div class="row no-gutters">
        <div class="col-xs-12  ">
            <div class="card" style="margin-top: 30px;">
                <div class="card-header">
                    <div class="card-actions">
                        <button type="button" class="card-action card-toggler" title="Collapse"></button>
                        <button type="button" class="card-action card-reload" title="Reload"></button>
                        <!-- <button type="button" class="card-action card-remove" title="Remove"></button> -->
                    </div>
                </div>

                <div class="card-body">
                    <button id="btnExport" class="btn btn-success col-xs-1 " onclick="fnExcelReport();"> EXCEL </button>
                    <table id="demo-datatables-1" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>S.N.</th>
                                <th>
                                    Token
                                </th>
                                <th>
                                    Item Category
                                </th>
                                <th>Department</th>
                                <th class="nosort">Item</th>
                                <th class="nosort shiftToRight">Quantity</th>
                                <th>Status</th>

                                <th class="nosort">Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>S.N.</th>
                                <th>
                                    Token
                                </th>
                                <th>
                                    Item Category
                                </th>
                                <th>Department</th>
                                <th class="nosort">Item</th>
                                <th class="nosort shiftToRight">Quantity</th>
                                <th>Status</th>
                                <th class="nosort">Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{
                                decimal amt = 0;

                            }
                            @foreach (var item in Model.RequestList)
                            {
                                int count = item.RequestItemByRequestTokenIdList.Count;
                                int onetime = 1;

                                foreach (var item1 in item.RequestItemByRequestTokenIdList)
                                {
                            <tr>

                                @if (onetime == 1)
                                {
                                    <td rowspan="@count"></td>
                                    <td rowspan="@count">@Html.DisplayFor(modelItem => item.RequestToken)</td>
                                    <td rowspan="@count">
                                        @Html.DisplayFor(modelItem => item.RequestCategory)
                                    </td>
                                    <td rowspan="@count">
                                        @Html.DisplayFor(modelItem => item.DepartmentName)
                                    </td>
                                }
                                @if (item.RequestCategory == "Asset")
                                {
                                    <td>@Html.DisplayFor(modelItem => item1.AssetItemName)</td>
                                }
                                @if (item.RequestCategory == "Inventory")
                                {
                                    <td>@Html.DisplayFor(modelItem => item1.ItemName)</td>
                                }
                                <td class="shiftToRight">@Html.DisplayFor(modelItem => item1.RequestQuantity)</td>

                                @if (onetime == 1)
                                {
                                    if (item.RequestStatus == "Pending")
                                    {
                                        <td rowspan="@count"><b class="btn-sm btn-warning" disabled>@Html.DisplayFor(modelItem => item.RequestStatus)</b></td>
                                    }
                                    else if (item.RequestStatus == "Approved")
                                    {
                                        <td rowspan="@count"><b class="btn-sm btn-success" disabled>@Html.DisplayFor(modelItem => item.RequestStatus)</b></td>
                                    }
                                    else
                                    {
                                        <td rowspan="@count"><b class="btn-sm btn-danger">@Html.DisplayFor(modelItem => item.RequestStatus)</b></td>
                                    }

                                    if (item.RequestStatus == "Pending")
                                    {
                            <td rowspan="@count">
                                @if (item.RequestCategory == "Asset")
                                {
                                    <a class="fa fa-check text-primary" , title="Accept" href="/A_Asset/Create1/@item.TokenId"></a>
                                }
                                @if (item.RequestCategory == "Inventory")
                                {
                                    <a class="fa fa-check text-primary" , title="Accept" href="/Inv_Distribution/Create1/@item.TokenId"></a>
                                }
                                |
                                @*@Html.ActionLink(" ", "Request_AssetDetails", new { id = item.TokenId }, new { @class = "fa fa-list text-success", title = "Details" }) |*@
                                @Html.ActionLink(" ", "Request_AssetRejectStore", new { id = item.TokenId }, new { @class = "fa fa-times text-danger", title = "Reject", onclick = "return confirm('Are you sure to Reject?')" })
                            </td>
                                    }
                                }
                            </tr>
                                    onetime++;

                                }


                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function fnExcelReport() {
        var tab_text = "<table border='2px'><tr bgcolor='#87AFC6'>";
        var textRange; var j = 0;
        tab = document.getElementById('demo-datatables-1'); // id of table

        for (j = 0; j < tab.rows.length; j++) {
            tab_text = tab_text + tab.rows[j].innerHTML + "</tr>";
            //tab_text=tab_text+"</tr>";
        }

        tab_text = tab_text + "</table>";
        tab_text = tab_text.replace(/<A[^>]*>|<\/A>/g, "");//remove if u want links in your table
        tab_text = tab_text.replace(/<img[^>]*>/gi, ""); // remove if u want images in your table
        tab_text = tab_text.replace(/<input[^>]*>|<\/input>/gi, ""); // reomves input params

        var ua = window.navigator.userAgent;
        var msie = ua.indexOf("MSIE ");

        if (msie > 0 || !!navigator.userAgent.match(/Trident.*rv\:11\./))      // If Internet Explorer
        {
            txtArea1.document.open("txt/html", "replace");
            txtArea1.document.write(tab_text);
            txtArea1.document.close();
            txtArea1.focus();
            sa = txtArea1.document.execCommand("SaveAs", true, "Say Thanks to Sumit.xls");
        }
        else                 //other browser not tested on IE 11
            sa = window.open('data:application/vnd.ms-excel,' + encodeURIComponent(tab_text));

        return (sa);
    }
</script>